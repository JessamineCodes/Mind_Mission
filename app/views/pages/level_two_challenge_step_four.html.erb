<div class="challenge two step four container">
  <h1>Hone Your Spy Senses</h1>


  <h3 style="text-align: center;padding-top:50px;">List 2 things you can <strong>smell</strong></h3>

  <div class="challenge two form" data-controller="disable-button">
    <%= simple_form_for(:quiz, url:level_two_challenge_step_five_path, method: :get) do |f| %>

      <div class="game-2-container-4">
      <div class="game-wrapper">
        <%= image_tag "nose.png", class:"nose-logo lvl2-icon-animation" %>
          <div class="mid-arch game-2-inputs">
            <div class="input2">
              <%= f.input :answer2, as: :string,label:false,placeholder:"Type here", input_html: {"data-action": "mouseout->disable-button#enableButton", "data-disable-button-target": "input"}  %>
            </div>
            <div class="input3">
              <%= f.input :answer3, as: :string,label:false,placeholder:"Type here", input_html: {"data-action": "mouseout->disable-button#enableButton", "data-disable-button-target": "input"}  %>
            </div>
          </div>
        </div>

        <div class="challenge 2 d-flex justify-content-center mt-4">
            <%= f.button :submit,"Next", disabled: true, data: {disable_button_target: "button"}, class:"button button-challenge-2 btn-bg"%>
        </div>
    <% end %>
  </div>
</div>
